<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"

        android:layout_marginBottom="38dp"
        android:gravity="center"
        android:text="Welcome Text"

        android:textSize="32dp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            android:onClick="goToMaps"
            app:cardCornerRadius="20dp"
            app:cardMaxElevation="12dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_park_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal|center_vertical"
                android:layout_marginStart="90dp"
                android:layout_marginBottom="25dp"
                android:text="Buy Parking"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal|center_vertical"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"
                android:text="Check if there is parking and then buy the parking"
                android:textSize="14dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:elevation="10dp"
            android:onClick="goToPerson"
            app:cardCornerRadius="20dp"
            app:cardMaxElevation="12dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_person_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal|center_vertical"
                android:layout_marginStart="90dp"
                android:layout_marginBottom="25dp"
                android:text="Check Account"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal|center_vertical"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"
                android:text="View account information and see your payments"
                android:textSize="14dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="10dp"
            android:onClick="goToManage"
            app:cardCornerRadius="20dp"
            app:cardMaxElevation="12dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_manage_foreground" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal|center_vertical"
                android:layout_marginStart="90dp"
                android:layout_marginBottom="25dp"
                android:text="Manage Parking"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal|center_vertical"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"
                android:text="See how long you have been parking and stop parking"
                android:textSize="14dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>