<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"

        android:text="Welcome Text"
        android:textSize="32dp"
        android:textStyle="bold"

        android:layout_marginTop="50dp"
        android:layout_marginBottom="38dp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:onClick="goToLots"
            android:elevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardCornerRadius="20dp"
            android:layout_marginEnd="10dp"
            android:layout_height="140dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_park_foreground"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="90dp"
                android:layout_gravity="clip_horizontal|center_vertical"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Buy Parking"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="90dp"
                android:layout_gravity="clip_horizontal|center_vertical"
                android:textSize="14dp"
                android:text="Check if there is parking and then buy the parking"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:elevation="10dp"
            app:cardMaxElevation="12dp"
            app:cardCornerRadius="20dp"
            android:layout_marginEnd="10dp"
            android:onClick="goToPerson"
            android:layout_height="140dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_person_foreground"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="90dp"
                android:layout_gravity="clip_horizontal|center_vertical"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Check Account"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="90dp"
                android:layout_gravity="clip_horizontal|center_vertical"
                android:textSize="14dp"
                android:text="View account information and see your payments"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:onClick="goToManage"
            android:elevation="10dp"
            android:layout_marginBottom="10dp"
            app:cardMaxElevation="12dp"
            app:cardCornerRadius="20dp"
            android:layout_marginEnd="10dp"
            android:layout_height="140dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_manage_foreground"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="90dp"
                android:layout_gravity="clip_horizontal|center_vertical"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Manage Parking"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="90dp"
                android:layout_gravity="clip_horizontal|center_vertical"
                android:textSize="14dp"
                android:text="See how long you have been parking and stop parking"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>